{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jasmine": true
  },
  "extends": ["plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-console": ["error"],
    "no-debugger": ["error"],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }],
    "semi": ["error", "always"]
  },
  "settings": {
    "import/extensions": [".js", ".ts"]
  }
}